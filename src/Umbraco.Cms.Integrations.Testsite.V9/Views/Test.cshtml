@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Test>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = null;
}

<div>
    <h1>Multiple products</h1>
    @foreach (var product in Model.ProductPicker)
    {
        <div>
            @product.Name (@product.Key)
            @foreach (var variant in product.Variants)
                {
                   @variant.Key
                }
            <hr />
        </div>
    }
    <hr />

    <h1>Single product</h1>
    @Model.SingleProductPicker?.Name (@Model.SingleProductPicker?.Key)
    <hr />

    <h1>Multiple categories</h1>
    @foreach (var category in Model.CategoryPicker)
    {
        <div>
            @category.Name (@category.Key)
            <hr />
        </div>
    }
    <hr />

    <h1>Single category</h1>
    @Model.SingleCategoryPicker?.Name (@Model.SingleCategoryPicker?.Key)
    <hr />
</div>

